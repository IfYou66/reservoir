import request from '@/utils/request'

// 查询档案借阅记录列表
export function queryBorrow(query) {
  return request({
    url: '/archives/borrow/list',
    method: 'get',
    params: query
  })
}

// 修改档案借阅记录 
export function updateBorrow(data) {
  return request({
    url: '/archives/borrow',
    method: 'put',
    data: data
  })
}

// 新增借阅记录 
export function addBorrow(data) {
  return request({
    url: '/archives/borrow',
    method: 'post',
    data: data
  })
}

// 是否借阅
export function queryIfBorrow(data) {
  return request({
    url: '/archives/borrow/queryIfBorrow',
    method: 'get',
    data: data
  })
}



