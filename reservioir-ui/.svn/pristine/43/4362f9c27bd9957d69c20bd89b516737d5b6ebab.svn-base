          fAppraisalResult: null,
          fPreparedBy: null,
          fPreparationTime: null,
          fResultFileId: null,
          fReviewComments: null,
          fReviewResult: null,
          fReviewPeople: null,
          fReviewDate: null,
          fAuditComments: null,
          fAuditResult: null,
