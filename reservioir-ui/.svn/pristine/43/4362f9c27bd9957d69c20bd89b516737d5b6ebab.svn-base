        },
        active: 1,
        info: {
          // stockDate: this.getNowTime(), //日期
        },
        dialogVisible: false,
        textarea: '',
        value1: '',
        value2: '',
        value3: '',
        value4: '',
        input: '',
        value: '',
        textarea1: '',
        textarea2: '',
